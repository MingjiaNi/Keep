<?xml version="1.0" encoding="utf-8"?>
<manifest package="science.keng42.keep"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name=".MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".HomeActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_home">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable"/>
        </activity>
        <activity
            android:name=".EntryActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_entry"
            android:parentActivityName=".HomeActivity"
            android:theme="@style/TranslucentTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="science.keng42.keep.HomeActivity"/>
        </activity>
        <activity
            android:name=".LabelActivity"
            android:label="@string/title_activity_label"
            android:parentActivityName=".EntryActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="science.keng42.keep.EntryActivity"/>
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"/>
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyAo_mFEUDwWrSJKGrrauD_uxpEMTE578rg"/>

        <activity
            android:name=".PlaceActivity"
            android:label="@string/title_activity_place">
        </activity>
        <activity
            android:name=".PhotoActivity"
            android:label="@string/title_activity_photo"
            android:parentActivityName=".EntryActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="science.keng42.keep.EntryActivity"/>
        </activity>
        <activity
            android:name=".PasswordActivity"
            android:label="@string/title_activity_password">
        </activity>

        <!--widget-->
        <service android:name=".service.NewEntryService">
        </service>
        <receiver android:name=".provider.NewEntryProvider">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widgetproviderinfo"/>
        </receiver>
    </application>

</manifest>
